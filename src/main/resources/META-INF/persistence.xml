<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="test">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>pl.tomaszrarok.osm.model.Teacher</class>
        <class>pl.tomaszrarok.osm.model.Student</class>
        <class>pl.tomaszrarok.osm.model.Payment</class>
        <class>pl.tomaszrarok.osm.model.Salary</class>
        <class>pl.tomaszrarok.osm.model.Course</class>
        <class>pl.tomaszrarok.osm.model.Term</class>


        <properties>
            <property name="hibernate.hbm2ddl.import_files_sql_extractor" value="org.hibernate.tool.hbm2ddl.MultipleLinesSqlCommandExtractor" />
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:school;user=root;password=root"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSevenDialect" />
            <property name="show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
